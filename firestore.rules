rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección arriendos
    match /arriendos/{document} {
      allow read, write: if true; // Permitir acceso completo por ahora
    }
    
    // Reglas para la colección cabanas
    match /cabanas/{document} {
      allow read, write: if true; // Permitir acceso completo por ahora
    }
    
    // Reglas para otras colecciones futuras
    match /{document=**} {
      allow read, write: if false; // Denegar acceso por defecto
    }
  }
}

